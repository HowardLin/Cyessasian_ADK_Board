<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent" a:layout_height="fill_parent"
	a:orientation="vertical">
    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_margin="10dp"
        a:background="@drawable/border"
        a:orientation="vertical"
        a:padding="10dp" >

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/deviceStatus"
                a:layout_width="0px"
                a:layout_height="wrap_content"
                a:layout_weight="1"
                a:text="Device not connected"
                a:textColor="@color/orange" />
        </LinearLayout>
        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >
            <TextView
                a:id="@+id/textModel"
                a:layout_width="239dp"
                a:layout_height="wrap_content"
                a:layout_weight="0.10"
                a:text="@string/Model" />

            <TextView
                a:id="@+id/textVersion"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="0.17"
                a:text="@string/Version" />

        </LinearLayout>

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/textDesignedBy"
                a:layout_width="239dp"
                a:layout_height="wrap_content"
                a:layout_weight="0.09"
                a:text="@string/DesignedBy" />

            <TextView
                a:id="@+id/textSerial"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="0.15"
                a:text="@string/Serial" />
        </LinearLayout>

    </LinearLayout>
				
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="75dp"
	    android:gravity="center"
	    android:orientation="horizontal" >
	    
	   <view
		class="com.cyess.CyessasianPicoLEDDEMO.LEDControl"
		android:id="@+id/led_0"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		android:layout_marginRight="10dp" 
				android:layout_marginLeft="10dp"
		/>
	    <view
		class="com.cyess.CyessasianPicoLEDDEMO.LEDControl"
		android:id="@+id/led_1"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		android:layout_marginRight="10dp" 
				android:layout_marginLeft="10dp"
		/>
	    <view
		class="com.cyess.CyessasianPicoLEDDEMO.LEDControl"
		android:id="@+id/led_2"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		android:layout_marginRight="10dp" 
				android:layout_marginLeft="10dp"
		/>
	    <view
		class="com.cyess.CyessasianPicoLEDDEMO.LEDControl"
		android:id="@+id/led_3"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		android:layout_marginRight="10dp" 
				android:layout_marginLeft="10dp"
		/>
	</LinearLayout>

 	<LinearLayout
	    a:layout_width="200dp"
	    a:layout_height="60dp"
	    a:layout_gravity="center"
	    a:layout_margin="1dp"

	    a:orientation="vertical"
	    a:padding="10dp" >

		<ImageView
		    a:id="@+id/imageView1"
		    a:layout_width="183dp"
		    a:layout_height="48dp"
		    a:layout_centerInParent="true"
		    a:src="@drawable/cyess_logo_small" />

	</LinearLayout>
	
</LinearLayout>