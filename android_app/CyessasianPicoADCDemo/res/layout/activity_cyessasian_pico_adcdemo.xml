<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent" a:layout_height="fill_parent"
	a:orientation="vertical">

    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_margin="10dp"
        a:background="@drawable/border"
        a:orientation="vertical"
        a:padding="10dp" >

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/deviceStatus"
                a:layout_width="0px"
                a:layout_height="wrap_content"
                a:layout_weight="1"
                a:text="Device not connected"
                a:textColor="@color/orange" />
        </LinearLayout>

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/textModel"
                a:layout_width="239dp"
                a:layout_height="wrap_content"
                a:layout_weight="0.10"
                a:text="@string/Model" />

            <TextView
                a:id="@+id/textVersion"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="0.17"
                a:text="@string/Version" />

        </LinearLayout>

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/textDesignedBy"
                a:layout_width="239dp"
                a:layout_height="wrap_content"
                a:layout_weight="0.10"
                a:text="@string/DesignedBy" />

            <TextView
                a:id="@+id/textSerial"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="0.15"
                a:text="@string/Serial" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_margin="10dp"
        a:background="@drawable/border"
        a:orientation="vertical"
        a:padding="10dp" >
            <LinearLayout
				   a:orientation="horizontal"
				    a:layout_width="wrap_content"
				    a:layout_height="wrap_content">
				    <TextView  
					    a:layout_width="fill_parent" 
					   a:layout_height="wrap_content" 
					    a:paddingRight="8sp" 
					    a:text="ADC  :"/>
				    <TextView 
				    	a:layout_height="wrap_content" 
				    	a:text="N/A" 
				    	a:id="@+id/textADC" 
				    	a:layout_width="fill_parent"/>
		    	</LinearLayout>
		    	<ProgressBar
				   a:layout_width="fill_parent"
					a:layout_height="wrap_content"
					a:id="@+id/progressBarADC"
					a:progress="0"
					a:max="100"
					style="?android:attr/progressBarStyleHorizontal"
			    	a:layout_marginTop="10dp" 
			    	a:layout_marginBottom="10dp"/>
    </LinearLayout>
    
 	
	<LinearLayout
	    a:layout_width="200dp"
	    a:layout_height="60dp"
	    a:layout_gravity="center"
	    a:layout_margin="1dp"

	    a:orientation="vertical"
	    a:padding="10dp" >

		<ImageView
		    a:id="@+id/imageView1"
		    a:layout_width="183dp"
		    a:layout_height="48dp"
		    a:layout_centerInParent="true"
		    a:src="@drawable/cyess_logo_small" />

	</LinearLayout>
</LinearLayout>